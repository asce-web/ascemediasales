<div{{ attributes.setAttribute('id', html_id) }}>
  <h2 class="inv-title">{% if icon is not empty %}<i class="{{ icon }}"></i>{% endif %} {{ title }}</h2>
  {% if subtitle is not empty %}
    <p class="inv-subtitle">{{ subtitle }}</p>
  {% endif %}
</div>
{% if backword is not empty %}
  <style type="text/css">
    #{{ html_id }} .inv-title:before{
      content:"{{ backword }}";
      display: block;
    }
  </style>
{% endif %}